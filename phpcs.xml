<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="PHP_CodeSniffer" xsi:noNamespaceSchemaLocation="phpcs.xsd">

    <file>application</file>

    <exclude-pattern>*/application/tests/_ci_phpunit_test/*</exclude-pattern>
    <exclude-pattern>*/application/tests/build/*</exclude-pattern>
    <exclude-pattern>*/application/tests/mocks/*</exclude-pattern>
    <exclude-pattern>*/application/cache/*</exclude-pattern>
    <exclude-pattern>*/application/libraries/*</exclude-pattern>
    <exclude-pattern>*/application/models/Grocery_crud_model.php</exclude-pattern>

    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="parallel" value="75"/>
    <arg value="np"/>

    <rule ref="PSR2" />

</ruleset>
