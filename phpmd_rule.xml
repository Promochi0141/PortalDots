<?xml version="1.0"?>
<ruleset name="Custom Rule Set for ridaisai_portal"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        Custom Rule Set for ridaisai_portal. 現状ではあまり使われていない。
    </description>
    <exclude-pattern>application/tests/_ci_phpunit_test/*</exclude-pattern>
    <exclude-pattern>application/tests/build/*</exclude-pattern>
    <exclude-pattern>application/tests/mocks/*</exclude-pattern>
    <exclude-pattern>application/cache/*</exclude-pattern>
    <exclude-pattern>application/libraries/*</exclude-pattern>
    <exclude-pattern>application/models/Grocery_crud_model.php</exclude-pattern>

    <!-- 発するエラーが多すぎるルールは対応が大変なので、一旦 exclude する -->
    <!-- 少しずつ exclude する rule は減らしていく -->
    <!-- 中にはフレームワークの制約から exclude しているものもある -->
    <rule ref="rulesets/codesize.xml">
        <exclude name="TooManyPublicMethods" />
    </rule>
    <rule ref="rulesets/controversial.xml">
        <exclude name="CamelCaseClassName" />
        <exclude name="CamelCasePropertyName" />
        <exclude name="CamelCaseMethodName" />
        <exclude name="CamelCaseParameterName" />
        <exclude name="CamelCaseVariableName" />
    </rule>
    <rule ref="rulesets/controversial.xml">
        <exclude name="ExitExpression" />
    </rule>
    <rule ref="rulesets/naming.xml" />
    <rule ref="rulesets/unusedcode.xml" />
</ruleset>
